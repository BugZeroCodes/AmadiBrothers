<!DOCTYPE html>
<html>
<head>
  <title>Teacher Appreciation</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-default" style='background-color: #e8ac53'>
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="<%= root_path %>"><%= image_tag asset_path('bug-zero-logo.jpeg'), width: '10%' %></a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style='background-color: #e8ac53;'>
        <input type="search" placeholder="Search..." />
        <%= link_to 'Manage teachers', teachers_path %>
        <ul class="nav navbar-nav navbar-right">
          <% if student_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <% if current_student.avatar.blank? == false %>
              <%= image_tag current_student.avatar.url, size:50, class: "user-pic-nav" %>
              <%= current_student.name %>
              <% else %>
              <%= current_student.name %>
              <% end %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit Profile", edit_student_registration_path %></li>
              <li><%= link_to "Sign Out", destroy_student_session_path, method: :delete %></li>
            </ul>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
