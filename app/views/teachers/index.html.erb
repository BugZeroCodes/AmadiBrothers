<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Configuration</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.name %></td>
      <td><%= teacher.email %></td>
      <td><%= link_to 'Delete', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>
